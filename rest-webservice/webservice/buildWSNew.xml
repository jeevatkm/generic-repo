    <!--delete>
        <fileset dir="${andromda.project}/CXF/target/src" includes="**/*"/>
    </delete-->
    <delete>
        <fileset dir="${andromda.project}/CXF/src/main/webapp/WEB-INF/classes" includes="**/*"/>
    </delete>
    <!-- Run wsgen (CXF wsdl2java) for each generated webservice class -->
    <antcall target="wsgenjava">
      <param name="package" value="com.myjeeva.andromda.demo.service"/>
      <param name="service" value="SearchService"/>
      <param name="namespace" value="http://service.demo.andromda.myjeeva.com/"/>
      <param name="dir" value="com/myjeeva/andromda/demo/service"/>
    </antcall>
