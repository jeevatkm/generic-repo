        <include name="com/myjeeva/andromda/demo/service/IndexDocumentImpl.java"/>
        <include name="com/myjeeva/andromda/demo/service/PerformSearchImpl.java"/>
        <include name="com/myjeeva/andromda/demo/service/SearchServiceWSDelegate.java"/>
      </fileset>
    </copy>
    <!-- Overwrite CXF generated Impl which only returns null values -->
    <move file="${andromda.project}/CXF/target/src/main/java/com/myjeeva/andromda/demo/service/SearchServiceSEIImpl.java"
        tofile="${andromda.project}/CXF/target/src/main/java/com/myjeeva/andromda/demo/service/SearchServiceSEIImpl.java.ref"
        failonerror="false" verbose="true"/>
    <copy todir="${andromda.project}/CXF/target/src/main/java" overwrite="true" preservelastmodified="true" verbose="true" failonerror="false">
